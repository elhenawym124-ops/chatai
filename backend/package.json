{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "Chat application backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=30000",
    "test:performance": "jest --testPathPattern=performance.test.js --testTimeout=60000",
    "test:integration": "jest --testPathPattern=integration --testTimeout=45000",
    "test:learning": "jest --testPathPattern=continuous-learning --testTimeout=30000",
    "security:isolation": "bash scripts/check-isolation.sh",
    "security:isolation-simple": "powershell -ExecutionPolicy Bypass -File scripts/check-isolation-simple.ps1",
    "security:isolation-basic": "node scripts/check-isolation-basic.js",
    "security:isolation-deep": "node scripts/deep-isolation-check.js",
    "security:isolation-summary": "node scripts/show-isolation-summary.js",
    "security:deep-summary": "node scripts/show-deep-analysis.js",
    "security:comprehensive": "node scripts/run-all-security-checks.js",
    "security:fix-critical": "node scripts/fix-critical-issues.js",
    "security:install": "pip install semgrep",
    "security:quick": "semgrep --config=.semgrep/isolation-rules.yml src/"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.12.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "array-flatten": "^3.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "path": "^0.12.7",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "prisma": "^6.12.0"
  }
}
