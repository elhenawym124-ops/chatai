# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application
NODE_ENV=production
APP_NAME=Communication Platform
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_DB=communication_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secure-postgres-password-here
DATABASE_URL=postgresql://postgres:your-super-secure-postgres-password-here@postgres:5432/communication_platform

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password-here
REDIS_URL=redis://:your-super-secure-redis-password-here@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-at-least-32-characters-long

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Frontend URLs
REACT_APP_API_URL=https://yourdomain.com/api/v1
REACT_APP_WS_URL=wss://yourdomain.com
REACT_APP_APP_NAME=Communication Platform
REACT_APP_APP_VERSION=1.0.0

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Communication Platform

# Facebook Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_VERIFY_TOKEN=your-facebook-verify-token
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Google Services
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live
REACT_APP_PAYPAL_CLIENT_ID=your-paypal-client-id

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Monitoring (Optional)
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# CDN Configuration (Optional)
CDN_URL=https://cdn.yourdomain.com
STATIC_FILES_URL=https://static.yourdomain.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ECOMMERCE=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME=true

# Company Settings
DEFAULT_COMPANY_PLAN=basic
MAX_USERS_PER_COMPANY=100
MAX_CONVERSATIONS_PER_MONTH=10000

# Webhook Configuration
WEBHOOK_BASE_URL=https://yourdomain.com/webhooks
WEBHOOK_SECRET=your-webhook-secret-key

# Cache Configuration
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Localization
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_CURRENCY=SAR

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_STATIC_FILES=true
STATIC_FILES_MAX_AGE=31536000

# Development/Debug (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=false
ENABLE_GRAPHQL_PLAYGROUND=false
