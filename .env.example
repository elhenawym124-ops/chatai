# =============================================================================
# COMMUNICATION PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME="Communication Platform"
APP_VERSION=1.0.0
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL="postgresql://username:password@localhost:5432/communication_platform?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=communication_platform
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Session Store
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_QUEUE_DB=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FACEBOOK INTEGRATION
# =============================================================================
# Facebook App Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_VERIFY_TOKEN=your-webhook-verify-token
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# Facebook Webhook
FACEBOOK_WEBHOOK_URL=https://yourdomain.com/webhook/facebook
FACEBOOK_API_VERSION=v18.0

# =============================================================================
# GOOGLE AI (GEMINI) CONFIGURATION
# =============================================================================
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM_NAME="Communication Platform"
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS Provider
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Application Monitoring
APM_SERVICE_NAME=communication-platform
APM_ENVIRONMENT=development

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# Google Maps (for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Weather API (for location-based features)
WEATHER_API_KEY=your-weather-api-key

# Currency Exchange API
CURRENCY_API_KEY=your-currency-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_ECOMMERCE=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME=true
ENABLE_PWA=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_DARK_MODE=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug Mode
DEBUG=app:*
DEBUG_SQL=false

# Hot Reload
HOT_RELOAD=true

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Development Tools
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Facebook Pixel
FB_PIXEL_ID=your-facebook-pixel-id

# Custom Analytics
ANALYTICS_API_KEY=your-analytics-api-key

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Instagram Business API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Twitter API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# =============================================================================
# QUEUE & BACKGROUND JOBS
# =============================================================================
# Bull Queue (Redis-based)
QUEUE_REDIS_URL=redis://localhost:6379/3
QUEUE_CONCURRENCY=5

# Job Retry Settings
JOB_MAX_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# Socket.io Settings
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling

# WebSocket Authentication
WS_AUTH_TIMEOUT=5000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL (Time To Live) in seconds
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# Cache Prefixes
CACHE_PREFIX_USER=user:
CACHE_PREFIX_SESSION=session:
CACHE_PREFIX_API=api:

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Default Language
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en,fr

# Timezone
DEFAULT_TIMEZONE=Asia/Riyadh

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/communication_platform_test?schema=public"

# Test Environment
TEST_JWT_SECRET=test-jwt-secret
TEST_SESSION_SECRET=test-session-secret

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose Override
COMPOSE_PROJECT_NAME=communication-platform
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# Container Settings
POSTGRES_VERSION=15
REDIS_VERSION=7
NODE_VERSION=18

# =============================================================================
# HEALTH CHECK ENDPOINTS
# =============================================================================
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# External Service Health Checks
CHECK_DATABASE=true
CHECK_REDIS=true
CHECK_EXTERNAL_APIS=true
